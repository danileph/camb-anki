{
  "name": "CambAnki",
  "description": "Add words from Cambridge Dictionary to your Anki!",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "index.html",
    "default_title": "Open the popup"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+Shift+D",
        "mac": "MacCtrl+D"
      },
      "description": "Open an extension popup"
    },
    "search": {
      "suggested_key": {
        "default": "Alt+Shift+S",
        "mac": "MacCtrl+S"
      },
      "description": "Search selected word"
    },
    "add_example": {
      "suggested_key": {
        "default": "Alt+Shift+E",
        "mac": "MacCtrl+E"
      },
      "description": "Add selected word as examlpe"
    }
  },
  "icons": {
    "16": "logo192.png",
    "48": "logo192.png",
    "128": "logo192.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "contextMenus"
  ],
  "content_scripts": [
    {
        "matches": ["http://*/*", "https://*/*"],
        "js": ["./static/js/content.js"]
    }
  ],
  "background": {
    "service_worker": "./static/js/background.js"
  }
}